{
  "ignore": [
    ".git",
    "node_modules/",
    "dist/",
    "coverage/",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "watch": ["src/"],
  "ext": "js,json,ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "tsconfig.server.json"
  },
  "exec": "node --inspect --require ts-node/register"
}
